
<P class="message"><%= notice %></P>

<body>
<h1 class="title">Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @books.each do |book| %>
   <tr>
     <td>
      <%= book.title %>
     </td>
     <td>
       <%= book.body %>
     </td>
     <td>
       <%= link_to "Show", book_path(book) %>
     </td>
     <td>
       <%= link_to "Edit", edit_book_path(book) %>
     </td>
     <td>
       <%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sureï¼Ÿ"} %>
     </td>
   </tr>
  <% end %>
</table>

<h2 class="new">New book</h2>
 <%= form_with model: @book, local: true do |f| %>

 <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count,"error") %>prohibited this product from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

 <P>Title</P>
 <%= f.text_field :title, class: "text1" %>
 <P>Body</P>
 <%= f.text_area :body, class: "text2" %>
 <%= f.submit "Create Book",class: "btn" %>
<% end %>
</body>
