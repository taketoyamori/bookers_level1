<h1 class="title">Editing Book</h1>
<%= form_with model: @book, local: true do |f| %>

   <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count,"error") %>prohibited this product from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
   <% end %>

   <P>Title</P>
    <%= f.text_field :title, class: "text1" %>
   <P>Body</P>
    <%= f.text_area :body, class: "text2" %>
    <%= f.submit "Update Book",class: "btn" %>
<% end %>

<%= link_to "Show",book_path(@book), class: "btn1" %>|<%= link_to "Back",books_path, class: "btn2" %>
