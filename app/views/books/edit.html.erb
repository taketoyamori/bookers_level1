<h1>Editing Book</h1>
<%= form_with model: @book, local: true do |f| %>

   <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
   <% end %>

   <P>Title</P>
    <%= f.text_field :title %>
   <P>Body</P>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
<% end %>
<P><%= link_to "Show",book_path(@book) %>|<%= link_to "Back",books_path %></P>